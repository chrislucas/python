
def testIO():
    while True:
        from sys import stdout, stdin
        n = stdin.readline()
        try:
            n = int(n)
            for i in range(n, -1, -1):
                stdout.write(str( "1" if n & (1 << i) > 0 else "0" ))
            stdout.write("\n")
        except:
            print "erro ao executar metodo de convercao para inteiro"
            break
       
    
if __name__ == "__main__":
    testIO()